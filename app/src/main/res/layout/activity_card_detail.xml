<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".categories.cardDetail"
    android:padding="6dp">

    <ImageView
        android:id="@+id/carddetail_image"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Name  :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/carddetail_image"/>

    <TextView
        android:id="@+id/namedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Detail"
        android:textSize="20dp"
        android:textColor="#000"
        android:padding="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/txt1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/carddetail_image"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginTop="10dp"
        android:text="Price    :"
        android:padding="3dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pricedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namedetail"
        android:layout_toRightOf="@+id/txt2"
        android:textColor="#000"
        android:layout_marginLeft="3dp"
        android:padding="3dp"
        android:textSize="20dp"
        android:text="Price Detail"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:textColor="#000"
        android:padding="3dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Details :"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/detail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pricedetail"
        android:layout_toRightOf="@+id/txt2"
        android:textColor="#000"
        android:lines="9"
        android:layout_marginLeft="3dp"
        android:padding="3dp"
        android:textSize="17dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/add_to_cart"
        android:background="@drawable/rec_gradient_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add to Cart"
        android:textColor="#fff"
        android:textStyle="bold"/>

</RelativeLayout>